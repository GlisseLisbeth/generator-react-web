{
    "parser": "babel-eslint",

    "rules": {
        "no-console": 0,
        "indent": [2, 4, {
            "SwitchCase": 1,
            "FunctionDeclaration": { "parameters": 1, "body": 1 },
            "FunctionExpression": { "parameters": 1, "body": 1 }
        }],
        "camelcase": [2, {"properties": "always"}],
        "wrap-iife": [2, "inside"],
        "new-cap": [2, { "capIsNewExceptions": [] }],
        "no-invalid-this": 2,
        "global-require": 0,
        "comma-dangle": [2, "never"],
        "import/no-extraneous-dependencies": "off"
    },

    "env": {
        "es6": true,
        "browser": true,
        "commonjs": true,
        "mocha": true
    },

    "extends": "airbnb",

    "globals": {}
}
